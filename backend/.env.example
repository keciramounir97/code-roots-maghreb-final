# ===============================
# SERVER
# ===============================
NODE_ENV=production
PORT=5000
API_URL=https://your-api-domain.com

# ===============================
# DATABASE
# ===============================
DATABASE_URL=mysql://user:password@host:3306/database?connection_limit=10&pool_timeout=30
DB_CONNECTION_LIMIT=10
DB_POOL_TIMEOUT=30
DB_BACKOFF_MS=15000
DB_POOL_BACKOFF_MS=3000

# ===============================
# AUTH (JWT) - Generate a strong secret: openssl rand -hex 64
# ===============================
JWT_SECRET=your-super-secret-jwt-key-at-least-64-chars
JWT_EXPIRES_IN=30d
RESET_CODE_TTL=900
SESSION_TTL_SECONDS=2592000

# ===============================
# CORS - Comma-separated allowed origins
# ===============================
CORS_ORIGIN=https://your-frontend.com,https://www.your-frontend.com
FRONTEND_URL=https://your-frontend.com

# ===============================
# RATE LIMITING
# ===============================
RATE_LIMIT_MAX=100
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_WINDOW_MS=60000

# ===============================
# MAIL (SMTP)
# ===============================
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=Your App <noreply@example.com>

# ===============================
# APP SETTINGS
# ===============================
SETTINGS_CACHE_TTL_MS=15000
OTP_EXPIRES_MINUTES=10
PASSWORD_RESET_EXPIRES_MINUTES=15
MAX_LOGIN_ATTEMPTS=5
